{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "contextWindow": 200000,
  "permissions": {
    "read": ["**/*"],
    "write": [
      "data/**",
      "skills/**",
      ".claude/logs/**",
      ".claude/dev_docs/**"
    ],
    "bash": ["git", "npm", "node", "python"]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/pre_research.js",
            "timeout": 30000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/post_collection.js",
            "timeout": 60000
          }
        ]
      }
    ]
  }
}
