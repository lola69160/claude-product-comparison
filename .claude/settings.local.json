{
  "permissions": {
    "allow": [
      "WebFetch",
      "WebSearch",
      "Bash(dir:*)",
      "Bash(mkdir:*)",
      "Bash(git:*)",
      "Bash(powershell -Command \"Get-Date -Format ''yyyyMMdd_HHmmss''\")",
      "Bash(claude mcp add:*)",
      "Bash(claude mcp remove:*)",
      "Bash(claude mcp list)",
      "mcp__apify__apify-slash-rag-web-browser"
    ],
    "deny": [
      "Read(**/.env)",
      "Edit(**/.env)",
      "Write(**/.env)",
      "Read(**/secrets/**)",
      "Edit(**/secrets/**)",
      "Write(**/secrets/**)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(rm:*)",
      "Bash(del:*)",
      "Bash(rmdir:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "apify"
  ]
}
